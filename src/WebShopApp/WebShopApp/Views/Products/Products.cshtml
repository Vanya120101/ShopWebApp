@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="~/styles.css" rel="stylesheet" />
</head>
<body>
    <h2>Details</h2>
    <table>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                @if(product.Count == 0)
                {
                    <td>There are no goods</td>
                }
                else if(product.Count <= 5)
                {
                    <td>There are little goods</td>
                }
                else
                {
                    <td>There are @product.Count goods</td>
                }
                <td>@product.Name</td>

                <td>
                    <a href="/Products/Details/@product.Id">Details...</a>
                </td>
            </tr>
        }
    </table>

    @if(Model.Count != 0)
    {
        <p>
            All: @Model.Count
        </p>
    }
    else
    {
        <p>List are empty</p>
    }

</body>
</html>
